{
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "package.json",
        "isAsync": true,
        "cmd": "npm run update"
      }
    ]
  },
  // Enable the ESlint flat config support
  "eslint.experimental.useFlatConfig": false,
  // Disable the default formatter, use eslint instead
  "prettier.enable": true,
  "editor.formatOnSave": true
}
