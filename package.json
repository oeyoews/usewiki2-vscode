{
  "publisher": "oeyoews",
  "name": "usewiki2",
  "displayName": "usewiki2",
  "version": "2.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.6",
  "description": "",
  "keywords": [
    "TiddlyWiki"
  ],
  "author": {
    "name": "oeyoews"
  },
  "pricing": "Free",
  "license": "MIT",
  "funding": "https://github.com/sponsors/oeyoews",
  "homepage": "https://github.com/oeyoews/usewiki2-vscode#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/oeyoews/usewiki2-vscode#readme"
  },
  "categories": [
    "Education"
  ],
  "main": "./dist/index.js",
  "icon": "res/tiddlywiki01.png",
  "engines": {
    "vscode": "^1.94.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "UseWiki2",
      "properties": {
        "usewiki2.enableSendSound": {
          "type": "boolean",
          "default": false,
          "description": "启用发送声音"
        },
        "usewiki2.placeholder": {
          "type": "string",
          "default": "Write something... Ctrl+Enter to save",
          "description": "默认提示符"
        },
        "usewiki2.defaultTag": {
          "type": "string",
          "default": "Journal",
          "description": "默认标签"
        },
        "usewiki2.defaultUsername": {
          "type": "string",
          "default": "",
          "description": "默认用户名"
        },
        "usewiki2.ip": {
          "order": 0,
          "type": "string",
          "default": "127.0.0.1",
          "markdownDescription": "你的TiddlyWiki地址 (请确定你已经启动了[太微](https://tiddlywiki.com/#Installing%20TiddlyWiki%20on%20Node.js))"
        },
        "usewiki2.port": {
          "order": 1,
          "type": "number",
          "default": 8080,
          "description": "端口 (请确定你已经启动了太微)"
        },
        "usewiki2.enableHttps": {
          "order": 2,
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable or Disable HTTPS(untest for https)"
        },
        "usewiki2.type": {
          "order": 3,
          "type": "string",
          "default": "text/vnd.tiddlywiki",
          "enum": [
            "text/markdown",
            "text/vnd.tiddlywiki"
          ],
          "enumItemLabels": [
            "Markdown",
            "WikiText"
          ],
          "markdownEnumDescriptions": [
            "use Markdown",
            "use WikiText"
          ],
          "description": "选择要使用的文本格式 (Markdown 或 TiddlyWiki)"
        }
      }
    },
    "menus": {
      "view/title": [
        {
          "command": "usewiki2.openwiki",
          "group": "navigation",
          "when": "view == usewiki2"
        },
        {
          "command": "usewiki2.opensettings",
          "group": "navigation",
          "when": "view == usewiki2"
        },
        {
          "command": "usewiki2.wikiinfo",
          "group": "navigation",
          "when": "view == usewiki2"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "usewiki2Container",
          "title": "usewiki",
          "icon": "res/tw.svg"
        }
      ]
    },
    "views": {
      "usewiki2Container": [
        {
          "id": "usewiki2",
          "type": "webview",
          "name": "TiddlyWiki"
        }
      ]
    },
    "commands": [
      {
        "command": "usewiki2.tiddlywiki",
        "title": "UseWiki2: Add Journal"
      },
      {
        "command": "usewiki2.wikiinfo",
        "title": "Usewiki2: Info",
        "icon": "$(info)"
      },
      {
        "command": "usewiki2.openwiki",
        "title": "Usewiki2: Open TiddlyWiki Instance",
        "icon": "$(globe)"
      },
      {
        "command": "usewiki2.opensettings",
        "title": "Usewiki2: Settings",
        "icon": "$(gear)"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "nr build --watch",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "build:react": "cd packages/react && pnpm build && cd ../..",
    "package": "pnpm build:react && vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.2.1",
    "@antfu/ni": "^0.21.12",
    "@types/node": "^20.14.11",
    "@types/vscode": "^1.91.0",
    "@vscode/vsce": "3.2.0",
    "bumpp": "^9.4.1",
    "eslint": "^8.57.0",
    "esno": "^4.7.0",
    "pnpm": "^8.15.9",
    "rimraf": "^5.0.9",
    "tsup": "^7.2.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vitest": "^2.0.5",
    "vscode-ext-gen": "^0.4.1"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "res",
    "react-dist",
    "LICENSE"
  ],
  "dependencies": {
    "reactive-vscode": "0.2.0"
  }
}